<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.appointment.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_appointment"
        android:name="com.example.appointment.book_appointment"
        android:label="@string/title_appointment"
        tools:layout="@layout/activity_appointment" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.appointment.chatActivity"
        android:label="@string/title_chat"
        tools:layout="@layout/activity_chat" />
</navigation>
